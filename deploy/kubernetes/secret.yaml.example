# MobileDroid Secrets
#
# Copy this file to secret.yaml and add your API keys:
#   cp secret.yaml.example secret.yaml
#   # Edit secret.yaml with base64 encoded values
#   kubectl apply -f secret.yaml
#
# To encode a value:
#   echo -n "your-api-key" | base64

apiVersion: v1
kind: Secret
metadata:
  name: mobiledroid-secrets
  namespace: mobiledroid
type: Opaque
data:
  # Base64 encoded values
  # echo -n "sk-ant-xxx" | base64
  ANTHROPIC_API_KEY: ""  # Required for AI agent
  OPENAI_API_KEY: ""     # Optional

  # Database password (default: mobiledroid)
  # echo -n "mobiledroid" | base64 = bW9iaWxlZHJvaWQ=
  POSTGRES_PASSWORD: bW9iaWxlZHJvaWQ=
